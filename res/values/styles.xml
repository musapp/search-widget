<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Search bar layout -->
	<style name="SearchLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/search_background</item>
		<item name="android:padding">5dp</item>
	</style>

	<style name="SearchLayout.Edit">
		<item name="android:autoText">false</item>
		<item name="android:imeOptions">actionSearch</item>
		<item name="android:drawableLeft">@drawable/search_icon_left</item>
		<item name="android:background">@color/white</item>
		<item name="android:hint">@string/search_hint</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="SearchLayout.ListView" parent="@android:style/Widget.ListView">
		<item name="android:scrollbars">none</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:listSelector">@drawable/search_list_view_selector</item>
		<item name="android:textStyle">bold</item>
		<item name="android:divider">@color/search_list_divider_color</item>
	</style>

	<style name="SearchLayout.Button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@drawable/selector</item>
		<item name="android:shadowColor">@color/button_title_shadow</item>
		<item name="android:shadowDx">0.0</item>
		<item name="android:shadowDy">-1.0</item>
		<item name="android:shadowRadius">1.0</item>
	</style>

	<!-- Navigation bar Right button -->
	<style name="SearchLayout.Button.Right">
		<item name="android:background">@drawable/button_selector</item>
	</style>

</resources>
